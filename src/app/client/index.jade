mixin stylesheet(name, hasMinVersion)
    -file = name + ((environment == "production" && hasMinVersion) ? ".min.css" : ".css")
    link(rel="stylesheet", type="text/css", href="styles/#{file}")

mixin script(name, hasMinVersion)
    -file = name + ((environment == "production" && hasMinVersion) ? ".min.js" : ".js")
    script(type="text/javascript", src="scripts/#{file}")

doctype html
html(ng-app="cfxnes")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title CFxNES - NES emulator
        link(rel="icon" type="image/png" href="images/favicon.png")
        +stylesheet("bootstrap-slider", true)
        +stylesheet("app", true)
        +script("browser-polyfill", false)
        +script("jquery", true)
        +script("bootstrap", true)
        +script("bootstrap-slider", true)
        +script("angular", true)
        +script("angular-ui-router", true)
        +script("ui-bootstrap-tpls", true)
        +script("slider", false)
        +script("screenfull", false)
        +script("md5", true)
        +script("jquery.browser", true)
        +script("jszip", true)
        +script("cfxnes", true)
        +script("app", true)
    body
        nav.navbar.navbar-default
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target=".navbar-collapse")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(ui-sref="emulator")
                        img(src="images/logo-sm.png")
                        | CFxNES
                .navbar-collapse.collapse
                    ul.nav.navbar-nav.navbar-left
                        li(ui-sref-active="active")
                            a(ui-sref="emulator" tooltip="Emulator" tooltip-class="navbar-tooltip")
                                span.icon.icon-gamepad
                                span Emulator
                        li(ui-sref-active="active" tooltip="Game Library" tooltip-class="navbar-tooltip")
                            a(ui-sref="library")
                                span.icon.icon-book
                                span Game Library
                        li(ui-sref-active="active" tooltip="Settings" tooltip-class="navbar-tooltip")
                            a(ui-sref="settings")
                                span.icon.icon-cog
                                span Settings
                    div(ui-view="header")
                    ul.nav.navbar-nav.navbar-right
                        li(ui-sref-active="active" tooltip="About" tooltip-class="navbar-tooltip")
                            a(ui-sref="about")
                                span.icon.icon-question-circle
                                span About
        main
            .content-wrapper(ui-view="content")
