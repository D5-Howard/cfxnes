.emulator
    display table
    height 100%
    width 100%
    .emulator-section
        display table-row
    .emulator-error
        .alert
            margin-left 15px
            margin-right 15px
            @media (min-width $screen-sm-min)
                width 50%
                min-width $screen-sm-min - 20px
                margin-left auto
                margin-right auto
    .emulator-controls
        position relative
        .alert
            margin-left 15px
            margin-right 15px
            @media (min-width $screen-sm-min)
                position absolute
                width 300px
                z-index 1
            h3
                white-space nowrap
            td
                padding 2px 2px 2px 30px
                &:first-child
                    font-weight bold
    .emulator-main
        height 100%
        .canvas-wrapper
            display table-cell
            position relative
            vertical-align middle
            text-align center
            .loader
                position absolute
                top 50%
                left 0
                right 0
                transform translateY(-50%)
                margin auto
