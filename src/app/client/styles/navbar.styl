.navbar-brand
    padding-top 8px
    img
        display inline
        margin-top -6px
        width 42px
        height 42px
        margin-right 10px

.nav.navbar-nav a .icon
    @extends .icon-lg
    margin-right 8px

.tooltip.navbar-tooltip
    display none !important

@media (min-width $screen-sm-min) and (max-width $screen-lg-min)
    .nav.navbar-nav a .icon
        margin-right 0
        & + span
            display none
    .tooltip.navbar-tooltip
        display initial !important
